{
    "manifest_version": 2,
    "name": "Quick Calendar Event",
    "version": "1.0 Alpha",

    "browser_specific_settings":{
      "gecko":{
          "id": "add-to-gcalendar-mattpixel7@gmail.com"
      }  
    },

    "description": "Adds highlighted date into Google Calendar Event",

    "icons" : {
        "48": "assets/icons/plus-sign.png"
    },

    "permissions": ["contextMenus", "identity"],

    "browser_action": {
        "default_icon": "assets/icons/plus-sign.png",
        "default_title": "Add to Google Calendar",
        "default_popup": "assets/pages/popup.html"
    },

    "background": {
        "page": "assets/pages/background.html"
    }
}

